<h3 class="ui header">{{t "forms.i-i-s-rpavy-проверка-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.время
      class=(if (v-get validationModel "время" "isInvalid") "error")
      label=(t "forms.i-i-s-rpavy-проверка-e.время-caption")
      data-test-i-i-s-rpavy-проверка-e-время=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "время" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-rpavy-проверка-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-rpavy-проверка-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.заменаЛенты
      class=(if (v-get validationModel "заменаЛенты" "isInvalid") "error")
      label=(t "forms.i-i-s-rpavy-проверка-e.заменаЛенты-caption")
      data-test-i-i-s-rpavy-проверка-e-заменаЛенты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "заменаЛенты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-rpavy-проверка-e.оператор-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.оператор
      displayAttributeName="фИО"
      autocomplete=true
      relationName="оператор"
      projection="ОператорL"
      title=(t "forms.i-i-s-rpavy-проверка-e.оператор-caption")
      readonly=readonly
      componentName="операторLookup"
      class=(if (v-get validationModel "оператор" "isInvalid") "error")
      data-test-i-i-s-rpavy-проверка-e-оператор=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "оператор" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-rpavy-проверка-e.терминал-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.терминал
      displayAttributeName="номер"
      autocomplete=true
      relationName="терминал"
      projection="ТерминалL"
      title=(t "forms.i-i-s-rpavy-проверка-e.терминал-caption")
      readonly=readonly
      componentName="терминалLookup"
      class=(if (v-get validationModel "терминал" "isInvalid") "error")
      data-test-i-i-s-rpavy-проверка-e-терминал=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "терминал" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.оператор.iD
      class=(if (v-get validationModel.оператор "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-rpavy-проверка-e.оператор.iD-caption")
      data-test-i-i-s-rpavy-проверка-e-оператор-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.оператор "iD" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.оператор.кодВхода
      class=(if (v-get validationModel.оператор "кодВхода" "isInvalid") "error")
      label=(t "forms.i-i-s-rpavy-проверка-e.оператор.кодВхода-caption")
      data-test-i-i-s-rpavy-проверка-e-оператор-кодВхода=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.оператор "кодВхода" "message")}}
  </div>
</form>
